{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
              "description": "The datacenter to use for the deployment."
            }
        }
    },
    "variables": {
        "userAssignedIdentityTenantId": "d49bcc71-d9a8-400b-9385-0015251d90c5",
        "userAssignedIdentityObjectId": "d1fd46e8-9d18-47d4-afab-b63513cb5098"
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "pay-servicebus-api",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "alternativeParameterValues":{},
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/', 'pay-servicebus-api')]"
                },
                "customParameterValues": {},
                "displayName": "pay-servicebus-api",
                "parameterValueSet":{
                    "name": "managedIdentityAuth",
                    "values": {}
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat('pay-servicebus-api','/',variables('userAssignedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', 'pay-servicebus-api')]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[variables('userAssignedIdentityTenantId')]",
                        "objectId": "[variables('userAssignedIdentityObjectId')]"
                    }
                }
            }
        }
    ]
  }