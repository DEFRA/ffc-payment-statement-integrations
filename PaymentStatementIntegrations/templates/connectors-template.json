{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
              "description": "The datacenter to use for the deployment."
            }
        },
        "logicAppSystemAssignedIdentityTenantId": {
            "type": "string"
        },
        "logicAppSystemAssignedIdentityObjectId": {
            "type": "string"
        },
        "connections_azureblob_name": {
            "defaultValue": "azureblob",
            "type": "string"
        },
        "serviceBusUserManagedIdentityTenantId": {
            "type": "string"
        },
        "serviceBusUserManagedIdentityObjectId": {
            "type": "string"
        },
        "connections_servicebus_name_sp": {
            "type": "string"
        },
        "connections_servicebus_name_api": {
            "type": "string"
        },
        "servicebus_connection_string_sp": {
            "type": "string"
        },
        "servicebus_connection_string_api": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connections_azureblob_name')]",
            "location": "[parameters('location')]",
            "kind": "V2",            
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('sa'))]"
            ],
            "properties": {
                "displayName": "privatestorage",
                "parameterValues": {
                    "accountName": "[variables('sa')]", 
                    "accessKey": "[concat(listKeys(concat(resourceGroup().id,'/providers/Microsoft.Storage/storageAccounts/', variables('sa')),'2019-06-01').keys[0].value)]"
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/azureblob')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('connections_servicebus_name_sp')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('connections_servicebus_name_sp')]",
                "parameterValueSet":{
                    "name": "connectionstringauth",
                    "values": {
                        "connectionString": {
                            "value": "[parameters('servicebus_connection_string_sp')]"
                          }
                    }
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/servicebus')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('connections_servicebus_name_api')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('connections_servicebus_name_api')]",
                "parameterValueSet":{
                    "name": "connectionstringauth",
                    "values": {
                        "connectionString": {
                            "value": "[parameters('servicebus_connection_string_api')]"
                          }
                    }
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/servicebus')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_azureblob_name'),'/',parameters('logicAppSystemAssignedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_azureblob_name'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('logicAppSystemAssignedIdentityTenantId')]",
                        "objectId": "[parameters('logicAppSystemAssignedIdentityObjectId')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_servicebus_name_sp'),'/',parameters('serviceBusUserManagedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_sp'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('serviceBusUserManagedIdentityTenantId')]",
                        "objectId": "[parameters('serviceBusUserManagedIdentityObjectId')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_servicebus_name_api'),'/',parameters('serviceBusUserManagedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_api'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('serviceBusUserManagedIdentityTenantId')]",
                        "objectId": "[parameters('serviceBusUserManagedIdentityObjectId')]"
                    }
                }
            }
        }
 
    ],
    "outputs": {
      "blobendpointurl": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_azureblob_name')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      },
      "servicebusendpointurlsp": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_sp')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      },
      "servicebusendpointurlapi": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_api')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      }
    }
  }