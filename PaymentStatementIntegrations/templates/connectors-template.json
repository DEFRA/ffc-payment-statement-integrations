{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "logicAppSystemAssignedIdentityTenantId": {
            "type": "securestring"
        },
        "logicAppSystemAssignedIdentityObjectId": {
            "type": "securestring"
        },
        "serviceBusUserManagedIdentityTenantId": {
            "type": "securestring"
        },
        "serviceBusUserManagedIdentityObjectId": {
            "type": "securestring"
        },
        "connections_servicebus_name_sp": {
            "type": "string"
        },
        "connections_servicebus_name_api": {
            "type": "string"
        },
        "servicebus_connection_string_sp": {
            "type": "securestring"
        },
        "servicebus_connection_string_api": {
            "type": "securestring"
        },
        "connections_dataverse_name_api": {
            "type": "string"
        },
        "service_principal_client_id": {
            "type": "securestring"
        },
        "service_principal_client_secret": {
            "type": "securestring"
        },
        "service_principal_tenant_id": {
            "type": "securestring"
        },
        "service_principal_object_id": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('connections_servicebus_name_sp')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('connections_servicebus_name_sp')]",
                "parameterValueSet":{
                    "name": "connectionstringauth",
                    "values": {
                        "connectionString": {
                            "value": "[parameters('servicebus_connection_string_sp')]"
                          }
                    }
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/servicebus')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('connections_servicebus_name_api')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('connections_servicebus_name_api')]",
                "parameterValueSet":{
                    "name": "connectionstringauth",
                    "values": {
                        "connectionString": {
                            "value": "[parameters('servicebus_connection_string_api')]"
                          }
                    }
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/servicebus')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2018-07-01-preview",
            "name": "[parameters('connections_dataverse_name_api')]",
            "location": "[parameters('location')]",
            "kind": "V2",
            "properties": {
                "displayName": "[parameters('connections_dataverse_name_api')]",
                "parameterValues": {
                    "token:clientId": "[parameters('service_principal_client_id')]",
                    "token:clientSecret": "[parameters('service_principal_client_secret')]",
                    "token:TenantId": "[parameters('service_principal_tenant_id')]",
                    "token:grantType": "client_credentials"
                },
                "api": {
                    "id": "[concat('/subscriptions/',subscription().subscriptionId,'/providers/Microsoft.Web/locations/',parameters('location'),'/managedApis/commondataservice')]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_servicebus_name_sp'),'/',parameters('serviceBusUserManagedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_sp'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('serviceBusUserManagedIdentityTenantId')]",
                        "objectId": "[parameters('serviceBusUserManagedIdentityObjectId')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_servicebus_name_api'),'/',parameters('serviceBusUserManagedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_api'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('serviceBusUserManagedIdentityTenantId')]",
                        "objectId": "[parameters('serviceBusUserManagedIdentityObjectId')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Web/connections/accessPolicies",
            "apiVersion": "2016-06-01",
            "name": "[concat(parameters('connections_dataverse_name_api'),'/',parameters('serviceBusUserManagedIdentityObjectId'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/connections', parameters('connections_dataverse_name_api'))]"
            ],
            "properties": {
                "principal": {
                    "type": "ActiveDirectory",
                    "identity": {
                        "tenantId": "[parameters('service_principal_tenant_id')]",
                        "objectId": "[parameters('service_principal_object_id')]"
                    }
                }
            }
        }
    ],
    "outputs": {
      "servicebusendpointurlsp": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_sp')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      },
      "servicebusendpointurlapi": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_servicebus_name_api')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      },
      "dataverseendpointurlapi": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', parameters('connections_dataverse_name_api')),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
      }
    }
  }